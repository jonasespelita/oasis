    <% form_tag "/users/change_password_update" do %>
      <span class="inst"><b>Password</b></span><br/>
      <%= label_tag "old_pass", "Old Password",   :class=> "scd"  %>:
      <%= password_field_tag  "old_password"  %><br/>
      <%= label_tag "new_pass", "New Password",   :class=> "scd"  %>:
      <%= password_field_tag "password"  %><br/>
      <%= label_tag "confirm_pass", "Confirm Password",  :class=> "scd" %>:
      <%= password_field_tag "password_confirmation"  %><br/>

      <span class="scd">&nbsp;</span>
      <%=  submit_tag "Save Changes", :disable_with => "Saving..." %>
    <% end %>

    <hr style="width: 500px; position: relative; left: -60px;"/>

    <% form_tag "/users/change_profile_update" do %>
