       <%= label_tag "address", "Address",   :class=> "scd"  %>:
      <%= text_field_tag  "m_name","#{current_user.address}"  %><br/>
      <span class="scd">&nbsp;</span>
      <%=  submit_tag "Save Changes", :disable_with => "Saving..." %>
    <% end %>



    <hr style="width: 500px; position: relative; left: -60px;"/>
    <% form_tag "/users/change_email" do %>
      <span class="inst"><b>Other Settings</b></span><br/>
      <%= label_tag "email", "Email Address", :class =>"scd" %>:
      <%= text_field_tag "email", "#{current_user.email}"%><br/> <span class="scd">&nbsp;</span>
      <%= check_box_tag("acceptq1", false ) %><span class="inst">Allow us to send notifications through your email</span><br/>
      <%= label_tag "cp", "Cellphone Number", :class =>"scd" %>:
      <%= text_field_tag "cp", "+639275016200"%><br/> <span class="scd">&nbsp;</span>
      <%= check_box_tag("acceptq1", false) %><span class="inst">Allow us to send notifications through your cellphone</span><br/>
       <%= label_tag "lang_set", "Language preference",   :class=> "scd"  %>:
       <%=select_tag "lang","<option>English</option> <option>Filipino</option>"  %><br/>
       <br/>
      <span class="scd">&nbsp;</span>

      <%=  submit_tag "Save Changes", :disable_with => "Saving..." %>
      <hr style="width: 500px; position: relative; left: -60px;"/>
     

    


    <% end %>
