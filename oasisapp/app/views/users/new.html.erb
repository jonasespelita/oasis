  :url => { :action => :vname }, :with =>'name') %>

<%= observe_field("user_middle_name",
  :frequency => 0.25,
  :update => :middle_namemsg,
  :url => { :action => :vname }, :with =>'name') %>

<%= observe_field("user_last_name",
  :frequency => 0.25,
  :update => :last_namemsg,
  :url => { :action => :vname }, :with =>'name') %>

<%= observe_field("user_cp_number",
  :frequency => 0.25,
  :update => :cp_numbermsg,
  :url => { :action => :vcp_number }, :with =>'cp_number') %>

<%= observe_field("user_nickname",
  :frequency => 0.25,
  :update => :nicknamemsg,
  :url => { :action => :vnickname }, :with =>'nickname') %>

<%= observe_field("user_address",
  :frequency => 0.25,
  :update => :addressmsg,
  :url => { :action => :vaddress }, :with =>'address') %>



